@model WebApplication10.Models.Order
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Delete Order";
}

<h2 class="text-danger">Delete Order</h2>

<p class="alert alert-warning">
    Are you sure you want to delete this order? This action cannot be undone.
</p>

<div>
    <strong>Order ID:</strong> @Model.Id
</div>
<div>
    <strong>Customer:</strong> @Model.Customer?.Name
</div>
<div>
    <strong>Employee:</strong> @Model.Employee?.Name
</div>
<div>
    <strong>Delivery Date:</strong> @Model.DeliveryDate.ToString("MM/dd/yyyy")
</div>
<div>
    <strong>Quantity:</strong> @Model.Quantity
</div>

<form asp-action="Delete" method="post" class="mt-4">
    <button type="submit" class="btn btn-danger btn-lg">Delete</button>
    <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
</form>
