@model WebApplication10.Models.Payment
@{
    Layout = "_AdminLayout";
}
<h2>Delete Payment</h2>
<p>Are you sure you want to delete this payment?</p>
<div>
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.OrderId</dd>
        <dt class="col-sm-2">Amount Paid</dt>
        <dd class="col-sm-10">@Model.AmountPaid</dd>
        <dt class="col-sm-2">Payment Method</dt>
        <dd class="col-sm-10">@Model.PaymentMethod</dd>
        <dt class="col-sm-2">Payment Date</dt>
        <dd class="col-sm-10">@Model.PaymentDate.ToShortDateString()</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
