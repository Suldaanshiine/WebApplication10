@model IEnumerable<WebApplication10.Models.Employee>
@{
    Layout = "_AdminLayout";
}

<h2>Employee List</h2>
<a asp-action="Add" class="btn btn-primary">Add Employee</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Role</td>
                <td>@employee.Phone</td>
                <td>
                    <a asp-action="Update" asp-route-id="@employee.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
