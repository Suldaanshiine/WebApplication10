<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Water Supply Management</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- jQuery and Validation libraries for client-side validation -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.9/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    @if (!(ViewData["HideNav"] is true))
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Water Supply Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <!-- Customers Menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Customers</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Customer" asp-action="Index">View All Customers</a></li>
                                <li><a class="dropdown-item" asp-controller="Customer" asp-action="Add">Add Customer</a></li>
                                <li><a class="dropdown-item" asp-controller="Customer" asp-action="Edit">Update Customer</a></li>
                                <li><a class="dropdown-item" asp-controller="Customer" asp-action="Delete">Delete Customer</a></li>
                            </ul>
                        </li>

                        <!-- Employees Menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Employees</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Employee" asp-action="Index">View All Employees</a></li>
                                <li><a class="dropdown-item" asp-controller="Employee" asp-action="Add">Add Employee</a></li>
                                <li><a class="dropdown-item" asp-controller="Employee" asp-action="Edit">Update Employee</a></li>
                                <li><a class="dropdown-item" asp-controller="Employee" asp-action="Delete">Delete Employee</a></li>
                            </ul>
                        </li>

                        <!-- Inventory Menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Inventory</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Inventory" asp-action="Index">View All Inventory</a></li>
                                <li><a class="dropdown-item" asp-controller="Inventory" asp-action="Add">Add Inventory</a></li>
                                <li><a class="dropdown-item" asp-controller="Inventory" asp-action="Edit">Update Inventory</a></li>
                                <li><a class="dropdown-item" asp-controller="Inventory" asp-action="Delete">Delete Inventory</a></li>
                            </ul>
                        </li>

                        <!-- Orders Menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Orders</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Order" asp-action="Index">View All Orders</a></li>
                                <li><a class="dropdown-item" asp-controller="Order" asp-action="Add">Add Order</a></li>
                                <li><a class="dropdown-item" asp-controller="Order" asp-action="Edit">Update Order</a></li>
                                <li><a class="dropdown-item" asp-controller="Order" asp-action="Delete">Delete Order</a></li>
                            </ul>
                        </li>

                        <!-- Payments Menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Payments</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Payment" asp-action="Index">View All Payments</a></li>
                                <li><a class="dropdown-item" asp-controller="Payment" asp-action="Add">Add Payment</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        
    }
    

    <div class="container mt-4">
        <h3>@ViewData["Title"]</h3>
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
